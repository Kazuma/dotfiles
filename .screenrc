# Window番号を1から始める
#screen 1

# エスケープキー
escape z

# C-c で新しいスクリーンを開き、zshにする
bind c screen zsh

# Emacsキーバインド
markkeys h=^B:l=^F:$=^E

# 起動画面OFF
startup_message off

# Screenを消しても、プロセスは残る
autodetach on

# ビープ音を鳴らさない
vbell off

# ビープ音を鳴らしたときに表示されるメッセージ
vbell_msg "Wuff!!"

# メッセージを表示する時間(秒単位)
msgwait 4

# ステータスラインの使用の有無
hardstatus on

# ステータスラインに表示する内容
hardstatus alwayslastline "%{= rw} %H %{= wk}%-Lw%{= bw}%n%f* %t%{= wk}%+Lw %{= wk}%=%{= kW} %y/%m/%d %c:%s "
caption always "%{= kK} %?%F%{= kW}%? %h%:%t (screen No.%n)%? %{-}"

# スクロールバックの行数
defscrollback 10000

shelltitle "$ |zsh"

defbce on
term xterm-256color
termcapinfo xterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'

# Window のリサイズ(C-z r)
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^] command
bind -c resize h eval 'resize -1' 'command -c resize'
bind -c resize j eval 'resize -1' 'command -c resize'
bind -c resize k eval 'resize +1' 'command -c resize'
bind -c resize l eval 'resize +1' 'command -c resize'

# Window の移動(C-z j)
bind j eval 'echo "Operate window"' 'command -c operate'
bind -c operate ^]  command
bind -c operate j eval 'focus down' 'command -c operate'
bind -c operate k eval 'focus up' 'command -c operate'

